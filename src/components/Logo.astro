---
interface Props {
  class?: string;
  light?: boolean;
}

const { class: className, light = false } = Astro.props;
---
<div class:list={["flex items-center gap-3 group cursor-pointer", className]}>
  <div class="relative w-10 h-10 flex-shrink-0">
    <svg width="100%" height="100%" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" class="overflow-visible">
      <!-- Background Gradient Circle -->
      <defs>
        <linearGradient id="logoGradient" x1="0" y1="0" x2="40" y2="40" gradientUnits="userSpaceOnUse">
          <stop stop-color="#2563EB" />
          <stop offset="1" stop-color="#1d4ed8" />
        </linearGradient>
        <filter id="glow" x="-10" y="-10" width="60" height="60" filterUnits="userSpaceOnUse">
          <feGaussianBlur stdDeviation="3" result="blur" />
          <feComposite in="SourceGraphic" in2="blur" operator="over" />
        </filter>
      </defs>

      <!-- Main TV Shape Container -->
      <rect 
        x="4" 
        y="8" 
        width="32" 
        height="24" 
        rx="6" 
        fill="url(#logoGradient)" 
        class="transition-all duration-300 group-hover:fill-brand-700"
      />
      
      <!-- Screen Reflection/Shine -->
      <path 
        d="M4 14C4 10.6863 6.68629 8 10 8H30C33.3137 8 36 10.6863 36 14V18L4 24V14Z" 
        fill="white" 
        fill-opacity="0.1"
      />

      <!-- Animated Play Button / Screen Content -->
      <g class="origin-center">
        <!-- Play Triangle -->
        <path 
          d="M17 16L25 20L17 24V16Z" 
          fill="white" 
          stroke="white" 
          stroke-width="2" 
          stroke-linejoin="round"
          class="transition-transform duration-300 group-hover:scale-110 origin-center"
        />
        
        <!-- Signal Waves (Right side) -->
        <path 
          d="M28 16C29.1046 17.1046 29.1046 18.8954 28 20" 
          stroke="white" 
          stroke-width="2" 
          stroke-linecap="round" 
          class="opacity-0 animate-[ping_2s_cubic-bezier(0,0,0.2,1)_infinite]"
        />
        <path 
          d="M31 14C33.2091 16.2091 33.2091 19.7909 31 22" 
          stroke="white" 
          stroke-width="2" 
          stroke-linecap="round" 
          class="opacity-0 animate-[ping_2s_cubic-bezier(0,0,0.2,1)_infinite_200ms]"
        />
      </g>

      <!-- Antenna -->
      <path 
        d="M14 8L10 4" 
        stroke="#2563EB" 
        stroke-width="2.5" 
        stroke-linecap="round"
        class="group-hover:-translate-y-0.5 transition-transform duration-300"
      />
      <path 
        d="M26 8L30 4" 
        stroke="#2563EB" 
        stroke-width="2.5" 
        stroke-linecap="round"
        class="group-hover:-translate-y-0.5 transition-transform duration-300"
      />
    </svg>
  </div>
  
  <div class="flex flex-col leading-none select-none">
    <div class="flex items-center">
      <span class:list={["text-xl font-extrabold tracking-tight transition-colors", light ? "text-white" : "text-slate-900"]}>
        Schau
      </span>
      <div class="relative ml-0.5">
        <span class:list={["text-xl font-extrabold tracking-tight relative z-10 transition-colors", light ? "text-brand-400" : "text-brand-600"]}>
          Alles
        </span>
        <div class:list={["absolute bottom-0.5 left-0 w-full h-2 -z-0 transform -skew-x-12 transition-colors", light ? "bg-brand-900/50" : "bg-brand-100"]}></div>
      </div>
    </div>
    <span class:list={["text-[0.65rem] font-bold uppercase tracking-[0.05em] ml-0.5 mt-0.5 flex items-center gap-1 whitespace-nowrap transition-colors", light ? "text-slate-400" : "text-slate-500"]}>
      <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
      Live TV, Filme & Serien
    </span>
  </div>
</div>

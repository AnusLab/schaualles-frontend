---
import { Trophy, Tv, Zap, PlayCircle, Medal, Activity, Flame, Target, Dribbble } from 'lucide-react';

const leagues = [
  { 
    name: 'Bundesliga', 
    icon: Trophy,
    gradient: 'from-red-500 to-red-600',
    bgGradient: 'from-red-50 to-red-100',
    description: 'Deutsche Fußball-Liga'
  },
  { 
    name: 'Champions League', 
    icon: Medal,
    gradient: 'from-blue-600 to-blue-700',
    bgGradient: 'from-blue-50 to-blue-100',
    description: 'UEFA Champions League'
  },
  { 
    name: 'Premier League', 
    icon: Activity,
    gradient: 'from-purple-600 to-purple-700',
    bgGradient: 'from-purple-50 to-purple-100',
    description: 'Englische Premier League'
  },
  { 
    name: 'Formel 1', 
    icon: Zap,
    gradient: 'from-red-600 to-orange-600',
    bgGradient: 'from-red-50 to-orange-50',
    description: 'Motorsport'
  },
  { 
    name: 'NBA', 
    icon: Dribbble,
    gradient: 'from-orange-500 to-orange-600',
    bgGradient: 'from-orange-50 to-orange-100',
    description: 'Basketball'
  },
  { 
    name: 'UFC', 
    icon: Flame,
    gradient: 'from-slate-700 to-slate-900',
    bgGradient: 'from-slate-50 to-slate-100',
    description: 'Mixed Martial Arts'
  },
];

const features = [
  {
    icon: Tv,
    title: "Live & On-Demand",
    description: "Alle Spiele live oder zeitversetzt mit 7-Tage Catch-Up"
  },
  {
    icon: Trophy,
    title: "Alle Top-Ligen",
    description: "Von Bundesliga bis NBA - alle großen Sport-Events"
  },
  {
    icon: Zap,
    title: "HD & 4K Qualität",
    description: "Kristallklare Bildqualität für das beste Sport-Erlebnis"
  }
];
---

<section class="py-24 bg-white relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute top-[-5%] left-[-5%] w-[400px] h-[400px] bg-slate-50 rounded-full mix-blend-multiply filter blur-3xl"></div>
    <div class="absolute bottom-[-5%] right-[-5%] w-[400px] h-[400px] bg-blue-50 rounded-full mix-blend-multiply filter blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-50 border border-blue-100 text-brand-600 text-sm font-bold mb-6">
        <Trophy className="w-4 h-4" />
        Live Sport-Events
      </div>
      
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Alle großen <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-600 to-brand-400">Sport-Events Live</span>
      </h2>
      
      <p class="text-xl text-slate-600 leading-relaxed">
        Verpassen Sie kein Spiel mehr - Bundesliga, Champions League, Premier League, NBA, UFC und Formel 1 in brillanter HD-Qualität.
      </p>
    </div>

    <!-- Leagues Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 mb-16">
      {leagues.map((league) => (
        <div class={`group bg-gradient-to-br ${league.bgGradient} rounded-2xl p-6 shadow-sm border border-slate-200 hover:shadow-xl hover:border-slate-300 hover:-translate-y-2 transition-all duration-300 relative overflow-hidden`}>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
          
          <div class="relative z-10 flex flex-col items-center justify-center text-center h-full min-h-[140px]">
            <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${league.gradient} flex items-center justify-center mb-3 shadow-lg group-hover:scale-110 transition-transform duration-300`}>
              <league.icon className="w-7 h-7 text-white" />
            </div>
            
            <h3 class="font-bold text-slate-900 text-sm mb-1 leading-tight">
              {league.name}
            </h3>
            
            <p class="text-xs text-slate-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              {league.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Features Box -->
    <div class="bg-blue-50/50 rounded-3xl p-8 md:p-12 border border-blue-100">
      <div class="grid md:grid-cols-3 gap-8 md:gap-12">
        {features.map((feature) => (
          <div class="text-center group">
            <div class="w-16 h-16 bg-brand-600 rounded-2xl flex items-center justify-center text-white mx-auto mb-6 shadow-lg shadow-brand-500/20 group-hover:scale-110 transition-transform duration-300">
              <feature.icon className="w-8 h-8" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">{feature.title}</h3>
            <p class="text-slate-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

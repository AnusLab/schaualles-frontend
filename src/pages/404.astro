---
import Layout from '../layouts/Layout.astro';
import { Home, Search, ArrowLeft, Tv, HelpCircle } from 'lucide-react';
---

<Layout title="404 - Seite nicht gefunden | SchauAlles.com" description="Die gesuchte Seite konnte nicht gefunden werden.">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-brand-900 to-slate-900 flex items-center justify-center px-4 py-16 relative overflow-hidden">
    
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-[-10%] right-[-5%] w-[600px] h-[600px] bg-brand-500/10 rounded-full blur-3xl animate-blob"></div>
      <div class="absolute bottom-[-10%] left-[-5%] w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
      <div class="absolute top-[40%] left-[50%] w-[400px] h-[400px] bg-indigo-500/10 rounded-full blur-3xl animate-blob animation-delay-4000"></div>
    </div>

    <!-- Floating TV Icons -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-10">
      <div class="absolute top-[10%] left-[10%] animate-float">
        <Tv className="w-12 h-12 text-brand-400" />
      </div>
      <div class="absolute top-[20%] right-[15%] animate-float animation-delay-1000">
        <Tv className="w-16 h-16 text-blue-400" />
      </div>
      <div class="absolute bottom-[15%] left-[20%] animate-float animation-delay-2000">
        <Tv className="w-10 h-10 text-indigo-400" />
      </div>
      <div class="absolute bottom-[25%] right-[10%] animate-float animation-delay-3000">
        <Tv className="w-14 h-14 text-brand-300" />
      </div>
    </div>

    <div class="max-w-4xl mx-auto text-center relative z-10">
      <!-- Animated 404 Number -->
      <div class="mb-8 relative">
        <h1 class="text-[12rem] md:text-[16rem] lg:text-[20rem] font-black text-transparent bg-clip-text bg-gradient-to-r from-brand-400 via-blue-400 to-brand-300 leading-none tracking-tighter animate-pulse-slow">
          404
        </h1>
        
        <!-- Glitch Effect Overlay -->
        <div class="absolute inset-0 text-[12rem] md:text-[16rem] lg:text-[20rem] font-black text-brand-500/20 leading-none tracking-tighter animate-glitch" aria-hidden="true">
          404
        </div>
      </div>

      <!-- Error Message -->
      <div class="mb-8 animate-fade-in-up">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-500/10 border border-red-500/20 text-red-400 text-sm font-bold mb-6">
          <HelpCircle className="w-4 h-4" />
          Seite nicht gefunden
        </div>
        
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
          Oops! Diese Seite existiert nicht
        </h2>
        
        <p class="text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
          Die von Ihnen gesuchte Seite konnte leider nicht gefunden werden. 
          Vielleicht wurde sie verschoben oder der Link ist veraltet.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 animate-fade-in-up animation-delay-500">
        <a 
          href="/" 
          class="group inline-flex items-center justify-center gap-3 px-8 py-4 rounded-xl bg-brand-600 hover:bg-brand-500 text-white font-bold text-lg transition-all transform hover:scale-105 shadow-xl shadow-brand-500/20 hover:shadow-brand-500/40"
        >
          <Home className="w-5 h-5 transition-transform group-hover:-translate-x-1" />
          Zur√ºck zur Startseite
        </a>
        
        <a 
          href="/hilfe" 
          class="group inline-flex items-center justify-center gap-3 px-8 py-4 rounded-xl bg-white/10 hover:bg-white/20 text-white font-bold text-lg transition-all border-2 border-white/20 hover:border-white/30 backdrop-blur-sm"
        >
          <Search className="w-5 h-5 transition-transform group-hover:rotate-12" />
          Hilfe Center
        </a>
      </div>

      <!-- Quick Links -->
      <div class="animate-fade-in-up animation-delay-1000">
        <p class="text-sm text-slate-500 mb-4 font-medium">Beliebte Seiten:</p>
        <div class="flex flex-wrap gap-3 justify-center">
          <a href="/#pricing" class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 text-slate-300 hover:text-white text-sm font-medium transition-all border border-white/10 hover:border-white/20">
            Preise
          </a>
          <a href="/#features" class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 text-slate-300 hover:text-white text-sm font-medium transition-all border border-white/10 hover:border-white/20">
            Features
          </a>
          <a href="/kontakt" class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 text-slate-300 hover:text-white text-sm font-medium transition-all border border-white/10 hover:border-white/20">
            Kontakt
          </a>
          <a href="/reseller" class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 text-slate-300 hover:text-white text-sm font-medium transition-all border border-white/10 hover:border-white/20">
            Reseller
          </a>
        </div>
      </div>

      <!-- Decorative Element -->
      <div class="mt-16 opacity-20">
        <svg class="w-full max-w-md mx-auto" viewBox="0 0 200 4" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 2H200" stroke="url(#gradient)" stroke-width="2" stroke-linecap="round"/>
          <defs>
            <linearGradient id="gradient" x1="0" y1="0" x2="200" y2="0">
              <stop offset="0%" stop-color="#3B82F6" stop-opacity="0"/>
              <stop offset="50%" stop-color="#3B82F6" stop-opacity="1"/>
              <stop offset="100%" stop-color="#3B82F6" stop-opacity="0"/>
            </linearGradient>
          </defs>
        </svg>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -30px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(30px, 10px) scale(1.05); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  @keyframes glitch {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }

  .animate-glitch {
    animation: glitch 0.5s infinite;
  }

  .animation-delay-500 {
    animation-delay: 0.5s;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-3000 {
    animation-delay: 3s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>

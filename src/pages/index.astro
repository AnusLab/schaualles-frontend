---
import Layout from '../layouts/Layout.astro';
import PricingTable from '../components/PricingTable.jsx';
import TrendingSection from '../components/TrendingSection.astro';
import HeroStats from '../components/HeroStats.jsx';
import SportsSection from '../components/SportsSection.astro';
import FAQ from '../components/FAQ.astro';
import { SelectionIcon, QualityIcon, SecurityIcon, GlobalIcon, DevicesIcon, SetupIcon } from '../components/ModernIcons.jsx';
import { MonitorPlay, CheckCircle2, ShieldCheck, HelpCircle, Shield, Zap, Radio, Wifi } from 'lucide-react';

const features = [
  {
    icon: SelectionIcon,
    title: "Riesige Auswahl",
    description: "Zugriff auf tausende nationale und internationale Sender, inklusive Premium-Sport, Dokus und Kinderprogramm."
  },
  {
    icon: QualityIcon,
    title: "HD & 4K Qualität",
    description: "Erleben Sie gestochen scharfe Bilder. Unsere Server sind für High-Bandwidth-Streaming optimiert."
  },
  {
    icon: SecurityIcon,
    title: "Sicher & Stabil",
    description: "Ihre Verbindung ist sicher. Unsere redundante Server-Infrastruktur garantiert maximale Verfügbarkeit."
  },
  {
    icon: GlobalIcon,
    title: "Weltweit verfügbar",
    description: "Egal wo Sie sind, Ihr TV ist dabei. Alles was Sie brauchen ist eine Internetverbindung."
  },
  {
    icon: DevicesIcon,
    title: "Alle Geräte",
    description: "Kompatibel mit Smart TV, Android Box, Fire TV Stick, Smartphone, Tablet und PC."
  },
  {
    icon: SetupIcon,
    title: "Einfache Einrichtung",
    description: "In wenigen Minuten startklar. Detaillierte Anleitungen und persönlicher Support helfen bei Fragen."
  }
];

import { getSeo } from '../lib/seo';

const seo = await getSeo('home') || {};
const pageTitle = seo.title || "SchauAlles.com - Premium IPTV Service | Beste Qualität & Preise";
const pageDescription = seo.description;
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-slate-50">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-50 via-white to-slate-100"></div>
    
    <!-- Animated Background Blobs -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
      <div class="absolute top-[-10%] right-[0%] w-[800px] h-[800px] bg-brand-100/30 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute bottom-[-10%] left-[-10%] w-[600px] h-[600px] bg-blue-100/30 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="w-full max-w-[90rem] mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-0 relative z-10">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        
        <!-- Left Content -->
        <div class="text-left max-w-3xl">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-50 border border-blue-100 text-blue-600 text-sm font-bold mb-4 lg:mb-6 animate-fade-in shadow-sm">
            <Shield className="w-4 h-4" />
            99.9% Uptime Garantie
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-extrabold tracking-tight text-slate-900 mb-4 lg:mb-6 leading-[1.1]">
            Das beste IPTV<br/>
            für <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-600 to-brand-400">Deutschland</span>
          </h1>
          
          <p class="text-lg lg:text-xl text-slate-600 mb-6 lg:mb-8 leading-relaxed max-w-2xl">
            Erleben Sie über <span class="font-bold text-slate-900">15.000+ HD-Sender</span> mit kristallklarer Bildqualität, ohne Vertragsbindung und <span class="font-bold text-slate-900">24/7 Support</span>.
          </p>

          <!-- Trust Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 lg:gap-4 mb-6 lg:mb-10 max-w-xl">
            <div class="flex items-center gap-3 bg-white p-4 rounded-2xl shadow-sm border border-slate-100">
              <div class="w-10 h-10 bg-blue-50 rounded-full flex items-center justify-center text-brand-600">
                <CheckCircle2 className="w-5 h-5" />
              </div>
              <span class="font-bold text-slate-700">99,9% Uptime</span>
            </div>
            <div class="flex items-center gap-3 bg-white p-4 rounded-2xl shadow-sm border border-slate-100">
              <div class="w-10 h-10 bg-blue-50 rounded-full flex items-center justify-center text-brand-600">
                <MonitorPlay className="w-5 h-5" />
              </div>
              <span class="font-bold text-slate-700">4K & Full HD</span>
            </div>
            <div class="flex items-center gap-3 bg-white p-4 rounded-2xl shadow-sm border border-slate-100">
              <div class="w-10 h-10 bg-blue-50 rounded-full flex items-center justify-center text-brand-600">
                <Shield className="w-5 h-5" />
              </div>
              <span class="font-bold text-slate-700">Anti-Freeze</span>
            </div>
            <div class="flex items-center gap-3 bg-white p-4 rounded-2xl shadow-sm border border-slate-100">
              <div class="w-10 h-10 bg-blue-50 rounded-full flex items-center justify-center text-brand-600">
                <Wifi className="w-5 h-5" />
              </div>
              <span class="font-bold text-slate-700">Keine Bindung</span>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#pricing" class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-xl text-white bg-brand-600 hover:bg-brand-700 transition-all transform hover:scale-105 shadow-xl shadow-brand-500/20">
              Pakete ansehen
              <MonitorPlay className="ml-2 h-5 w-5" />
            </a>
            <a href="#features" class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-xl text-slate-700 bg-white border-2 border-slate-200 hover:border-slate-300 hover:bg-slate-50 transition-all">
              Mehr erfahren
            </a>
          </div>

          <div class="mt-6 lg:mt-8 flex flex-wrap gap-4 lg:gap-6 text-sm font-medium text-slate-500">
            <div class="flex items-center gap-2">
              <CheckCircle2 className="w-4 h-4 text-green-500" />
              Sofortiger Zugang
            </div>
            <div class="flex items-center gap-2">
              <CheckCircle2 className="w-4 h-4 text-green-500" />
              Keine Kreditkarte nötig
            </div>
            <div class="flex items-center gap-2">
              <CheckCircle2 className="w-4 h-4 text-green-500" />
              Deutscher Support
            </div>
          </div>
        </div>

        <!-- Right Visual -->
        <div class="relative hidden lg:block pl-10">
           <HeroStats client:load />
        </div>
        
      </div>
    </div>
  </section>

  <!-- Trending Section -->
  <TrendingSection />

  <!-- Sports Section -->
  <SportsSection />

  <!-- Features Section -->
  <section id="features" class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">Warum SchauAlles.com?</h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Wir bieten Ihnen das beste Entertainment-Erlebnis mit modernster Technologie und unschlagbarem Service.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="group p-8 rounded-3xl bg-slate-50 hover:bg-white hover:shadow-2xl hover:shadow-slate-200/50 transition-all duration-300 border border-slate-100">
            <div class="mb-6 transform group-hover:scale-110 transition-transform duration-300">
              <feature.icon className="w-16 h-16" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">{feature.title}</h3>
            <p class="text-slate-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-24 bg-slate-50 relative overflow-hidden">
    <div class="max-w-[90rem] mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">Unsere Tarife</h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Wählen Sie die Anzahl Ihrer Geräte und finden Sie das perfekte Paket.
          <br/>
          <span class="text-brand-600 font-medium">Keine versteckten Kosten. Sofortige Lieferung.</span>
        </p>
      </div>

      <PricingTable client:load />
      
    </div>
  </section>

  <!-- FAQ Section -->
  <FAQ />

  <!-- CTA Section -->
  <section class="py-24 bg-brand-900 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <path d="M0 0 L100 100 L100 0 Z" fill="white" />
      </svg>
    </div>
    
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">
        Bereit für das ultimative Fernseherlebnis?
      </h2>
      <p class="text-xl md:text-2xl text-brand-100 mb-12 max-w-3xl mx-auto">
        Starten Sie noch heute und überzeugen Sie sich selbst von unserer Qualität. 
        30 Tage Geld-zurück-Garantie bei Unzufriedenheit.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#pricing" class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-full text-brand-900 bg-white hover:bg-brand-50 transition-all shadow-xl hover:scale-105">
          Jetzt Zugang sichern
        </a>
        <button onclick="$crisp.push(['do', 'chat:open']);" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium rounded-full text-white border-2 border-white/20 hover:bg-white/10 transition-all gap-3 cursor-pointer" aria-label="Live-Chat öffnen">
          <span class="relative flex h-3 w-3" aria-hidden="true">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          Live-Chat
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

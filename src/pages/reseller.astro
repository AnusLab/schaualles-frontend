---
import Layout from '../layouts/Layout.astro';
import { 
  Users, 
  ShoppingBag, 
  Share2, 
  MessageCircle, 
  TrendingUp, 
  Zap, 
  CheckCircle2, 
  Headphones, 
  Globe, 
  Infinity,
  ChevronRight,
  DollarSign,
  Shield
} from 'lucide-react';

const sellChannels = [
  {
    icon: Users,
    title: "Freunde & Familie",
    description: "Starten Sie in Ihrem persönlichen Umfeld"
  },
  {
    icon: ShoppingBag,
    title: "Online-Marktplätze",
    description: "eBay Kleinanzeigen, Facebook Marketplace & mehr"
  },
  {
    icon: Share2,
    title: "Social Media",
    description: "Instagram, Facebook, TikTok - nutzen Sie alle Kanäle"
  },
  {
    icon: MessageCircle,
    title: "Messenger",
    description: "WhatsApp, Telegram - direkter Kundenkontakt"
  }
];

const benefits = [
  {
    icon: DollarSign,
    title: "Hohe Provisionen",
    description: "Attraktive Vergütung pro Kunde - Sie verdienen bei jedem Verkauf mit"
  },
  {
    icon: Zap,
    title: "Schnelle Aktivierung",
    description: "Sofortiger Start - Werden Sie noch heute Partner"
  },
  {
    icon: CheckCircle2,
    title: "Bewährtes Produkt",
    description: "Verkaufen Sie einen etablierten Premium-Service"
  },
  {
    icon: Headphones,
    title: "Deutscher Support",
    description: "Unser deutsches Team hilft sofort bei Problemen oder Fragen"
  },
  {
    icon: Globe,
    title: "Großes Netzwerk",
    description: "Teil von Europas größtem IPTV-Netzwerk werden"
  },
  {
    icon: Infinity,
    title: "Unbegrenzte Möglichkeiten",
    description: "Keine Verkaufslimits - verdienen Sie so viel Sie können"
  }
];

const features = [
  "Flexible Verkaufspreise",
  "Eigenes Reseller-Panel",
  "Automatische Aktivierung",
  "Deutscher 24/7 Support",
  "Keine monatlichen Gebühren"
];

import { getSeo } from '../lib/seo';

const seo = await getSeo('reseller') || {};
const pageTitle = seo.title || "Reseller werden | SchauAlles.com Partnerprogramm";
const pageDescription = seo.description || "Werden Sie SchauAlles Partner. Bauen Sie sich ein passives Einkommen auf mit Europas führendem IPTV-Service.";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-24 lg:pt-48 lg:pb-32 overflow-hidden bg-slate-900">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-brand-950 to-slate-900"></div>
    
    <!-- Animated Background Blobs -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
      <div class="absolute top-[-10%] right-[0%] w-[800px] h-[800px] bg-brand-900/20 rounded-full mix-blend-screen filter blur-3xl animate-blob"></div>
      <div class="absolute bottom-[-10%] left-[-10%] w-[600px] h-[600px] bg-indigo-900/20 rounded-full mix-blend-screen filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-500/10 border border-brand-500/20 text-brand-400 text-sm font-bold mb-8 animate-fade-in">
        <TrendingUp className="w-4 h-4" />
        Passives Einkommen aufbauen
      </div>
      
      <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight text-white mb-8 leading-[1.1]">
        Werden Sie<br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-400 to-brand-200">SchauAlles Partner</span>
      </h1>
      
      <p class="text-xl text-slate-400 mb-12 leading-relaxed max-w-2xl mx-auto">
        Starten Sie noch heute Ihr eigenes lukratives Business mit Europas führendem IPTV-Service.
        <br/>
        <span class="text-white font-bold">Sofortiger Start möglich. Keine Verkaufslimits.</span>
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#chatraChatExpanded" class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-xl text-slate-900 bg-brand-400 hover:bg-brand-300 transition-all transform hover:scale-105 shadow-xl shadow-brand-500/20">
          Jetzt Partner werden
          <ChevronRight className="ml-2 h-5 w-5" />
        </a>
      </div>
    </div>
  </section>

  <!-- Market Potential Section -->
  <section class="py-16 bg-slate-50 border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl p-8 md:p-12 shadow-xl shadow-slate-200/50 border border-slate-100 flex flex-col lg:flex-row items-center gap-12 relative overflow-hidden">
        <!-- Decorative blob -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-brand-50 rounded-full blur-3xl -translate-y-1/2 translate-x-1/3 opacity-50"></div>
        
        <div class="flex-1 relative z-10">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-50 text-blue-600 text-xs font-bold uppercase tracking-wider mb-4">
            Marktpotenzial
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6 leading-tight">
            50+ Millionen Nutzer <br/>
            <span class="text-slate-500">weltweit nutzen bereits IPTV</span>
          </h2>
          <p class="text-lg text-slate-600 leading-relaxed">
            Der Markt wächst rasant. Steigen Sie jetzt ein und profitieren Sie von diesem Boom. 
            Als Reseller haben Sie die Möglichkeit, sich ein stabiles und skalierbares Einkommen aufzubauen.
          </p>
        </div>

        <div class="relative z-10 w-full lg:w-auto">
          <div class="bg-gradient-to-br from-brand-500 to-brand-600 p-1 rounded-3xl shadow-lg transform rotate-1 lg:rotate-2 hover:rotate-0 transition-transform duration-300">
            <div class="bg-white rounded-[22px] p-8 text-center min-w-[280px]">
              <p class="text-slate-500 font-medium mb-2">Verdienstmöglichkeiten</p>
              <div class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-2">
                <span class="text-brand-500">Unbegrenzt</span>
              </div>
              <p class="text-sm font-bold text-slate-400 uppercase tracking-wide">Nach oben keine Limits</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sales Channels Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">Wo können Sie verkaufen?</h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Sie haben unbegrenzte Möglichkeiten! Verkaufen Sie über jeden Kanal, den Sie möchten. Wir setzen keine Limits.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {sellChannels.map((channel) => (
          <div class="group p-8 rounded-3xl bg-slate-50 hover:bg-white hover:shadow-xl transition-all duration-300 border border-slate-100 text-center">
            <div class="w-16 h-16 bg-brand-100 rounded-2xl flex items-center justify-center text-brand-600 mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
              <channel.icon className="w-8 h-8" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">{channel.title}</h3>
            <p class="text-slate-600">
              {channel.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">Ihre Vorteile</h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Profitieren Sie von unserem etablierten System und werden Sie Teil unseres Erfolgs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="bg-white p-8 rounded-3xl shadow-sm border border-slate-200 hover:border-brand-200 transition-colors">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center text-brand-600">
                <benefit.icon className="w-6 h-6" />
              </div>
              <h3 class="text-lg font-bold text-slate-900">{benefit.title}</h3>
            </div>
            <p class="text-slate-600 leading-relaxed">
              {benefit.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Included Section -->
  <section class="py-24 bg-slate-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-3xl md:text-5xl font-bold text-white mb-8">
            Alles was Sie für den<br/>
            <span class="text-brand-400">Erfolg brauchen</span>
          </h2>
          <p class="text-lg text-slate-400 mb-10 leading-relaxed">
            Wir statten Sie mit allem aus, was Sie benötigen um erfolgreich zu starten. 
            Keine versteckten Kosten, volle Transparenz.
          </p>
          
          <ul class="space-y-4">
            {features.map((feature) => (
              <li class="flex items-center gap-3 text-white font-medium bg-white/5 p-4 rounded-xl border border-white/10">
                <CheckCircle2 className="w-6 h-6 text-brand-400 flex-shrink-0" />
                {feature}
              </li>
            ))}
          </ul>
        </div>

        <div class="relative">
          <div class="absolute inset-0 bg-brand-500 blur-[100px] opacity-20 rounded-full"></div>
          <div class="relative bg-slate-800 p-8 rounded-3xl border border-slate-700 shadow-2xl">
            <h3 class="text-2xl font-bold text-white mb-8">So funktioniert's</h3>
            
            <div class="space-y-8">
              <div class="flex gap-4">
                <div class="w-10 h-10 bg-brand-500/20 rounded-full flex items-center justify-center text-brand-400 font-bold flex-shrink-0 border border-brand-500/30">1</div>
                <div>
                  <h4 class="text-white font-bold mb-2">Zugang anfordern</h4>
                  <p class="text-slate-400 text-sm leading-relaxed">Kontaktieren Sie uns via Telegram oder E-Mail für Ihren persönlichen Reseller-Account.</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="w-10 h-10 bg-brand-500/20 rounded-full flex items-center justify-center text-brand-400 font-bold flex-shrink-0 border border-brand-500/30">2</div>
                <div>
                  <h4 class="text-white font-bold mb-2">Credits aufladen</h4>
                  <p class="text-slate-400 text-sm leading-relaxed">Laden Sie Ihr Guthaben auf. Je mehr Sie aufladen, desto günstiger der Preis pro Credit.</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="w-10 h-10 bg-brand-500/20 rounded-full flex items-center justify-center text-brand-400 font-bold flex-shrink-0 border border-brand-500/30">3</div>
                <div>
                  <h4 class="text-white font-bold mb-2">Kunden anlegen</h4>
                  <p class="text-slate-400 text-sm leading-relaxed">Erstellen Sie Lines für Ihre Kunden in Sekunden. Volle Kontrolle über Laufzeiten & Pakete.</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="w-10 h-10 bg-brand-500/20 rounded-full flex items-center justify-center text-brand-400 font-bold flex-shrink-0 border border-brand-500/30">4</div>
                <div>
                  <h4 class="text-white font-bold mb-2">Gewinn erzielen</h4>
                  <p class="text-slate-400 text-sm leading-relaxed">Sie bestimmen den Verkaufspreis. Die Marge gehört zu 100% Ihnen.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quality & Stability Section -->
  <section class="py-24 bg-white border-b border-slate-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-blue-50 to-slate-50 rounded-[2.5rem] p-8 md:p-16 border border-blue-100/50 text-center max-w-5xl mx-auto relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-100 rounded-full blur-3xl -translate-y-1/2 translate-x-1/3 opacity-50"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-brand-100 rounded-full blur-3xl translate-y-1/2 -translate-x-1/3 opacity-50"></div>
        
        <div class="relative z-10">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-white rounded-2xl shadow-sm text-brand-600 mb-8">
            <Shield className="w-8 h-8" />
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
            Wir bieten die beste Qualität sowie Stabilität
          </h2>
          <p class="text-lg md:text-xl text-slate-600 leading-relaxed max-w-3xl mx-auto">
            Als Reseller müssen Sie sich in Bezug auf technische Fragen nicht den Kopf zerbrechen: 
            <span class="font-semibold text-slate-900">Wir übernehmen sowohl die Wartung als auch die Problembehebung unserer Dienste.</span>
            <br class="hidden md:block" />
            Konzentrieren Sie sich auf die Neukundengewinnung – wir erledigen den Rest.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-24 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">Häufig gestellte Fragen</h2>
        <p class="text-xl text-slate-600">Fragen & Antworten</p>
      </div>

      <div class="space-y-4">
        <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden hover:border-brand-200 transition-colors">
          <details class="group">
            <summary class="flex justify-between items-center font-medium cursor-pointer list-none p-6 text-lg text-slate-900">
              <span>Kann ich IPTV Reseller werden?</span>
              <span class="transition group-open:rotate-180">
                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
              </span>
            </summary>
            <div class="text-slate-600 px-6 pb-6 leading-relaxed border-t border-slate-100 pt-4">
              Grundsätzlich kann jeder IPTV-Reseller werden, jedoch sollten Sie über etwas Erfahrung in diesem Bereich verfügen, da Sie für die Betreuung Ihrer Kunden zuständig sind.
            </div>
          </details>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden hover:border-brand-200 transition-colors">
          <details class="group">
            <summary class="flex justify-between items-center font-medium cursor-pointer list-none p-6 text-lg text-slate-900">
              <span>Wie kann ich bezahlen?</span>
              <span class="transition group-open:rotate-180">
                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
              </span>
            </summary>
            <div class="text-slate-600 px-6 pb-6 leading-relaxed border-t border-slate-100 pt-4">
              Als Reseller haben Sie die Möglichkeit, Ihr Guthaben mit verschiedenen Kryptowährungen wie Bitcoin (BTC), Litecoin (LTC), Monero (XMR) und vielen anderen aufzuladen. Darüber hinaus besteht die Option, anonyme Gutscheinkarten zu verwenden, jedoch fällt dabei eine zusätzliche Gebühr von 30% an. Es wird empfohlen, sich vorher beim Kundendienst zu informieren, um weitere Details zu erfahren.
            </div>
          </details>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden hover:border-brand-200 transition-colors">
          <details class="group">
            <summary class="flex justify-between items-center font-medium cursor-pointer list-none p-6 text-lg text-slate-900">
              <span>Bekomme ich Support?</span>
              <span class="transition group-open:rotate-180">
                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
              </span>
            </summary>
            <div class="text-slate-600 px-6 pb-6 leading-relaxed border-t border-slate-100 pt-4">
              Sie können uns jederzeit über unseren Live-Support (24/7 erreichbar) kontaktieren. Zusätzlich steht Ihnen auch ein dedizierter Account Manager über Telegram zur Verfügung.
            </div>
          </details>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden hover:border-brand-200 transition-colors">
          <details class="group">
            <summary class="flex justify-between items-center font-medium cursor-pointer list-none p-6 text-lg text-slate-900">
              <span>Kann ein Reseller Konto ablaufen?</span>
              <span class="transition group-open:rotate-180">
                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
              </span>
            </summary>
            <div class="text-slate-600 px-6 pb-6 leading-relaxed border-t border-slate-100 pt-4">
              Das Reseller-Konto hat keine Ablaufzeit. Wenn Ihre aufgeladenen Credits aufgebraucht sind, können Sie keine weiteren Zugänge für Ihre Kunden erstellen. In diesem Fall müssen Sie Ihr Konto erneut aufladen.
            </div>
          </details>
        </div>
      </div>

      <div class="mt-12 text-center p-6 bg-blue-50 rounded-2xl border border-blue-100">
        <p class="text-slate-700 font-medium mb-2">Sie haben nicht die richtige Antwort gefunden?</p>
        <p class="text-slate-600 mb-4">Hier finden Sie weitere Informationen oder kontaktieren Sie uns direkt.</p>
        <a href="#chatraChatExpanded" class="text-brand-600 font-bold hover:text-brand-700 hover:underline">Kontakt aufnehmen &rarr;</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="contact" class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-brand-900 to-slate-900"></div>
    
    <!-- Decorative elements -->
    <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center opacity-10"></div>
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-brand-500/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/3"></div>
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-8 leading-tight">
        Bereit für Ihren Erfolg?
      </h2>
      <p class="text-xl text-slate-300 mb-12 leading-relaxed max-w-2xl mx-auto">
        Starten Sie jetzt durch. Wir begleiten Sie auf dem Weg zu Ihrem erfolgreichen Business. 
        Kein Risiko, volle Unterstützung.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a href="#chatraChatExpanded" class="flex items-center justify-center gap-3 px-10 py-5 text-lg font-bold rounded-2xl bg-white text-brand-900 hover:bg-brand-50 transition-all shadow-2xl shadow-brand-500/20 hover:-translate-y-1 hover:shadow-brand-500/30">
          <MessageCircle className="w-6 h-6" />
          Jetzt Partner werden
        </a>
      </div>
      
      <p class="mt-8 text-sm text-slate-500">
        Unser Team antwortet in der Regel innerhalb weniger Minuten.
      </p>
    </div>
  </section>

</Layout>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
